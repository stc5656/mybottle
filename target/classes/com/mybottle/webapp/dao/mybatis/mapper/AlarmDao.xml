<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybottle.webapp.dao.AlarmDao">

	<insert id = "intsert" parameterType="com.mybottle.webapp.entity.Alarm">
		insert into Member(id, name, pwd, email)
		values(#{id}, #{name}, #{pwd}, #{email})
	</insert>

	<update id ="update" parameterType="com.mybottle.webapp.entity.Alarm">
		UPDATE [Member]
		SET 
			[id] = #{id}
			,[email] = #{email}
			,[pwd] = #{pwd}
		WHERE id = #{id}		
	</update>


	<delete id = "delete" parameterType="String">
		DELETE FROM [dbo],[Member]
		WHERE id = #{param1}	
	</delete>
	
	
	<select id = "get" resultType="com.mybottle.webapp.entity.Alarm">
		select*from Member where id = #{param1}
	
	</select>
	
	
	<select id="getList" resultType="com.mybottle.webapp.entity.Alarm">
		select * from Member
		where ${param1} like '%${param2}%'
		<!-- 다음은 페이징을 위한 쿼리 옵션 -->
		order by regDate desc
		offset #{(param3-1)*10} rows <!-- 1 -> 0, 2 -> 10, 3 -> 20 -->
		fetch next 10 rows only
	</select>
	
</mapper>
